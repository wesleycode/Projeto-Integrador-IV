<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence              http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="myUnity">
    <!-- You create this name -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- List of entities -->
    <class>model.Avaliacao</class>
    <class>model.Carrinho</class>
    <class>model.Categoria</class>
    <class>model.Cidade</class>
    <class>model.Cliente</class>
    <class>model.Endereco</class>
    <class>model.Estado</class>
    <class>model.FormaPagamento</class>
    <class>model.Fornecedor</class>
    <class>model.FotoProduto</class>
    <class>model.InformacoesPeca</class>
    <class>model.ItensCarrinho</class>
    <class>model.ItensPedido</class>
    <class>model.Loja</class>
    <class>model.MarcaProduto</class>
    <class>model.Peca</class>
    <class>model.Pedido</class>
    <class>model.Pessoa</class>
    <class>model.Produto</class>
    <class>model.TipoEntrega</class>
    <!--  -->
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <!-- DB Driver -->
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/banco"/>
      <!-- BD -->
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <!-- DB User -->
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <!-- DB Password -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
      <!-- DB Dialect -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <!-- create / create-drop / update -->
      <property name="hibernate.show_sql" value="true"/>
      <!-- Show SQL in console -->
      <property name="hibernate.format_sql" value="true"/>
      <!-- Show SQL formatted -->
    </properties>
  </persistence-unit>
</persistence>
